<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HalloDoc.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@19.2.16/build/css/intlTelInput.css">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@19.2.16/build/js/intlTelInput.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>    
</head>
<body class="bg-light">
    <header class="shadow">
        <div class="d-flex justify-content-between bg-white rounded-0 border-bottom">
            <i class="fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center my-3 p-2"></i>
            <img id="halloDocLogo" class="img-fluid img-responsive p-3" src="~/images/Fig56. Patient site 1.png" />
            <div class="d-inline-flex align-items-center p-3">
                <label class="d-none d-sm-block">Welcome <strong>@CV.UserName()</strong></label>
                <a asp-controller="UserLogin" asp-action="Logout" class="text-decoration-none"><i class="d-block d-sm-none fa-solid fa-arrow-right-from-bracket text-info border rounded border-info mx-3 mx-xs-2 my-3 p-2"></i></a>
                <a asp-controller="UserLogin" asp-action="Logout" class="d-none d-sm-block btn border border-info text-info mx-3  mx-xs-2">Logout</a>
                <a href=""><i class="fas fa-moon text-info border rounded border-info my-3 p-2"></i></a>
            </div>
        </div>
        <nav class="d-none d-sm-block bg-white">
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a asp-controller="PatientDashboard" asp-action="Index" class="nav-link text-secondary TabItem" id="nav-tab1-tab" type="button" role="tab" aria-controls="nav-tab1" aria-selected="true">Dashboard</a>
                <a asp-controller="PatientDashboard" asp-action="Profile" class="nav-link text-secondary TabItem" id="nav-tab2-tab"  type="button" role="tab" aria-controls="nav-tab2" aria-selected="false">Profile</a>
            </div>
        </nav>
    </header> 
    <div class="main-container py-2 mb-5">
        @RenderBody()
    </div>

    <div class="bg-dark d-flex justify-content-end p-1 text-white fixed-bottom">
        <a href="#" class="text-white text-decoration-none m-3 h6">Terms of condition</a>
        <a href="#" class="text-white text-decoration-none m-3 h6">Privacy Policy</a>
    </div>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>